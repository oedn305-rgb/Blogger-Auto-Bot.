name: Pro Trend Publisher Bot

on:
  schedule:
    - cron: '0 */4 * * *'
  workflow_dispatch:

jobs:
  build:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout Code
        uses: actions/checkout@v2

      - name: Set up Python
        uses: actions/setup-python@v2
        with:
          python-version: '3.10' # تأكد من استخدام نسخة حديثة

      - name: Install Google GenAI Library
        run: |
          python -m pip install --upgrade pip
          pip install google-genai  # تثبيت المكتبة المطلوبة

      - name: Run Global Trend Bot
        env:
          GEMINI_KEY: ${{ secrets.GEMINI_KEY }}
          MY_EMAIL: ${{ secrets.MY_EMAIL }}
          EMAIL_PASS: ${{ secrets.EMAIL_PASS }}
        run: python bot.py
